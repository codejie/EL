<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/pullToRefreshListView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

    </com.handmark.pulltorefresh.library.PullToRefreshListView>

    <jie.android.el.view.PopupLayout
        android:id="@+id/popup_window"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_gravity="bottom"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|fill_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="0.8"
                android:background="@drawable/el_player_bg"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff44cc44" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|fill_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="0.8"
                android:background="@drawable/el_player_bg"
                android:clickable="true"
                android:src="@drawable/el_close" />
        </LinearLayout>

        <WebView
            android:id="@+id/webView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1" />
    </jie.android.el.view.PopupLayout>

</FrameLayout>
