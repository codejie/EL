<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <SeekBar
            android:id="@+id/playSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/playTextTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <ImageView
            android:id="@+id/playImageView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@drawable/el_player_bg"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/el_audio_repeat" />

        <ImageView
            android:id="@+id/playImageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@drawable/el_player_bg"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/el_audio_shuffle" />

        <ImageView
            android:id="@+id/playImageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.22"
            android:background="@drawable/el_player_bg"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/el_audio_prev" />

        <ImageView
            android:id="@+id/playImageView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:background="@drawable/el_player_bg"
            android:clickable="true"
            android:longClickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/el_player_play" />

        <ImageView
            android:id="@+id/playImageView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.22"
            android:background="@drawable/el_player_bg"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/el_audio_next" />

    </LinearLayout>

</LinearLayout>